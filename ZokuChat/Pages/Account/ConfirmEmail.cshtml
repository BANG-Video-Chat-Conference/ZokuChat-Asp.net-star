@page
@model ConfirmEmailModel
@{
	ViewData["Title"] = "Confirm Email";
}

@await Component.InvokeAsync("SiteHeader", new { })
<div class="margin-lg">
	<h3>Confirm Email</h3>
	<p>@Model.Message</p>
@if (Model.IsResendVisible)
{
	<div>
		<button asp-action="post" class="btn btn-primary">Resend</button>
	</div>
}
</div>