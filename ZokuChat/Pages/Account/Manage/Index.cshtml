@page
@model IndexModel
@{
	ViewData["Title"] = "Account";
}

@using ZokuChat.Helpers

<partial name="_SiteHeader" />
<div class="margin-lg">
	<h3>Account</h3>
	<div class="form-group">
		<label for="username">Username</label>
		<div id="username">
			@Model.CurrentUser.UserName
		</div>
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<div id="email">
			@Model.CurrentUser.Email
		</div>
	</div>
</div>
