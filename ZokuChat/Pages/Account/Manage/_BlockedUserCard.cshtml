@model BlockedUser
@using ZokuChat.Models
@using ZokuChat.Services

@inject IUserService UserService
@inject Context DbContext

<div class="card card-block">
	<div class="card-body">
		<div>
			@UserService.GetUserByUID(Model.BlockedUID).UserName
		</div>
		<i class="text-muted">
			Blocked on <partial name="_LocalDateTime" model="@Model.CreatedDateUtc" />
		</i>
	</div>
	<div class="card-footer">
		@ZokuChat.Helpers.HtmlHelper.GetUnblockUserButton(UserService.GetUserByUID(Model.BlockedUID))
	</div>
</div>